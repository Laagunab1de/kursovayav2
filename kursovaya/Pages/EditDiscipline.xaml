<Page x:Class="kursovaya.Pages.EditDiscipline"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kursovaya.Pages" xmlns:vm="clr-namespace:kursovaya.Vm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditDiscipline">

    <StackPanel>
        <Label Content="Название"/>
        <TextBox Text="{Binding EditDiscipline.Title}"/>
        <Label Content="Число мест"/>
        <TextBox Text="{Binding EditDiscipline.NuberOfPlaces}"/>
        <Button Content="Сохранить" Command="{Binding SaveDiscipline}" />
    </StackPanel>
</Page>
